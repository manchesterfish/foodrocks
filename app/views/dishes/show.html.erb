    <div class="form-group">
        <label class="col-sm-5 control-label text-white">Dish name</label> 
        <p class="col-sm-5 text-align-left large-font-size"><%= @dish.dish_name %></p> 
    </div>

    <div class="form-group">
       <label class="col-sm-5 control-label text-white">Price</label> 
        <p class="col-sm-5 text-align-left large-font-size"><%= @dish.price %></p> 
    </div>
 </form>
</div>


